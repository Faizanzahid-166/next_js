{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
, "src/app/api/auth/signup/route.js", "src/app/(auth-pages)/resend-opt/page.jsx", "src/app/(home)/page.jsx", "src/app/page.jsx", "src/lib/mailer.js", "src/lib/auth.js", "src/components/header/MobileMenu.jsx", "src/components/header/Navbar.jsx", "src/app/(auth-pages)/verify-otp/[email]/page.jsx", "email/VerificationEmail.jsx"  ],
  "exclude": ["node_modules"]
}
